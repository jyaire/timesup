{% extends 'base.html.twig' %}

{% block title %}Partie {{ game.id }}{% endblock %}

{% block body %}
    <h1>Partie {{ game.id }}</h1>

    <p>Lancée le {{ game.date ? game.date|date('d/m/Y à H:i:s') : '' }}</p>

    <p>Teams inscrites :</p>
    <ul>
                {% for team in game.teams %}
                    <li>{{ team.name }}</li>
                {% endfor %}
    </ul>

    <p>Inscrire une autre team :</p>
    <ul>
    {% for team in teams %}
        <li><a href="{{ path('add_team_to_game', {'id': game.id, 'team': team.id }) }}">{{ team.name }}</a></li>
    {% endfor %}
    </ul>

    <a href="{{ path('add_words_to_game', {'game': game.id }) }}">Choisir des mots</a>


{% for role in app.user.roles %}
    {% if role == "ROLE_ADMIN" %}
    <a href="{{ path('game_index') }}">Liste des parties</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
    {% endif %}
    {% endfor %}
{% endblock %}
