{% extends 'base.html.twig' %}

{% block title %}{{ team.name }}{% endblock %}

{% block body %}
    <h1>Team {{ team.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                {% if app.user == team %}
                    <td>{{ team.email }}</td>
                {% else %}
                    <td>information privée</td>
                {% endif %}
            </tr>
            <tr>
                <th>Parties jouées</th>
                <td>
                    <ul>
                    {% for history in team.histories %}
                        <li>
                            <a href="{{ path('game_show', {'id': history.game.id }) }}" alt="Partie {{ history.game.id }}">Partie {{ history.game.id }}</a>
                        </li>
                        {% else %}
                        Aucune partie enregistrée
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
    <a class="secondary-button" href="{{ path('app_logout') }}" title="Déconnexion">Se déconnecter</a>
{% endblock %}
